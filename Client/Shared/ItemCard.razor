<div class="itemCard" @onclick="ToggleCardFlip">
    @if (!isFlipped)
    {
        <div class="front">
            <div class="top">
                <div class="label">
                    @name
                </div>
                <div class="description">
                    @type
                </div>
            </div>
            <div class="image" style="background-image: url(@artwork)">
            </div>
            <div class="bottom">
                <span>@tcgDate</span>
            </div>
        </div>
    }
    else
    {
        <div class="back">
            <div class="top">
                <div class="label">
                    @name
                </div>
                <div class="date">
                    Released: @tcgDate
                    </div>
                <div class="description">
                    @type
                </div>
            </div>
           
           
            <div class="bottom">
                <a href="https://www.yugipedia.com/wiki/@name" class="wikipedia" target="_blank" rel="noopener noreferrer">Yugipedia</a>
            </div>
        </div>
    }

</div>



@code {
    [Parameter]
    public string name { get; set; }
    [Parameter]
    public long id { get; set; }
    [Parameter]
    public string type { get; set; }
    [Parameter]
    public string tcgDate { get; set; } 
    [Parameter]
    public string artwork { get; set; }

    public bool isFlipped = false;

    private void ToggleCardFlip()
    {
        isFlipped = !isFlipped;
    }
}
